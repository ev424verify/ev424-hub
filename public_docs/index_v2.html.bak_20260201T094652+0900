      title="EV424 Public Doc">
    </iframe>
  </div>
  <script>
  (function(){
    var frame = document.getElementById("docFrame");
    var a = document.getElementById("openIdentity");
    var b = document.getElementById("openPage1");

    var ID = "/public_docs/identity/EV424_Identity_SSOT_EN.pdf";
    var P1 = "/public_docs/summary/EV424_Product_Summary_1Page_2026-01.pdf";

    function setSrc(src){
      if(frame) frame.src = src;
    }

    if(a){ a.addEventListener("click", function(e){ e.preventDefault(); setSrc(ID); }); }
    if(b){ b.addEventListener("click", function(e){ e.preventDefault(); setSrc(P1); }); }

    setSrc(ID);
  })();
</script>
